<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.media.MediaView?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>
<BorderPane xmlns="http://javafx.com/javafx/24.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.winnerx0.maka.MakaController"
            stylesheets="@styles.css"
            style="-fx-background-color: black;">


<center>

    <StackPane fx:id="stackPane">
        <MediaView fx:id="mediaView"
                   preserveRatio="true"
                />


        <VBox alignment="BOTTOM_CENTER" spacing="10" fx:id="vBox">
            <!-- Progress bar -->
            <ProgressBar fx:id="progressBar"
                         styleClass="progress-bar"
                         prefWidth="600"
                         prefHeight="30"
                         maxWidth="Infinity"/>

            <!-- Buttons in a row -->
            <AnchorPane prefHeight="80">
                <Button fx:id="previousButton"
                        onAction="#previousVideo"
                        text="Previous"
                        prefWidth="100"
                        prefHeight="35"
                        styleClass="media-button"
                        AnchorPane.leftAnchor="50.0"
                        AnchorPane.bottomAnchor="22.5" />

                <Button fx:id="playPauseButton"
                        onAction="#playPauseVideo"
                        prefWidth="100"
                        prefHeight="35"
                        styleClass="media-button"
                        AnchorPane.leftAnchor="170.0"
                        AnchorPane.bottomAnchor="22.5" />

                <Button fx:id="nextButton"
                        onAction="#nextVideo"
                        text="Next"
                        prefWidth="100"
                        prefHeight="35"
                        styleClass="media-button"
                        AnchorPane.rightAnchor="50.0"
                        AnchorPane.bottomAnchor="22.5" />
            </AnchorPane>
        </VBox>
    </StackPane>
</center>

</BorderPane>