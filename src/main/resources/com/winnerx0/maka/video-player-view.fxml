<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.media.MediaView?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/24.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-border-width: 0; -fx-background-color: black;"
            fx:controller="com.winnerx0.maka.MakaController">

    <center>
        <MediaView fx:id="mediaView" preserveRatio="true" />
    </center>

    <bottom>
        <HBox alignment="center" spacing="10" style="-fx-padding: 10;">
            <Button onAction="#previousVideo" text="Previous" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 1px; -fx-border-radius: 10px" prefWidth="100"/>
            <Button onAction="#nextVideo" text="Next" style="-fx-background-color: transparent; -fx-border-color: white; -fx-border-width: 1px; -fx-border-radius: 10px" prefWidth="100"/>
        </HBox>
    </bottom>
</BorderPane>
